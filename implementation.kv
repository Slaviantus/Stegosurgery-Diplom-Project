#:include embedding.kv
#:include stitching.kv

<ImplementationWindow@Screen>:
    name: 'implementation'

    top_text_a: label_a
    top_text_b: label_b
    spread_mes: label_c
    spread_check: check_box_a
    start_button: button_a


    on_enter: root.on_open_window()


    canvas.before:
        Rectangle:
            pos: self.pos
            size: 600, 850
            source: 'background.png'

    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: 25, 730
            size: 550, 2
        Rectangle:
            pos: 25, 100
            size: 550, 2
        Rectangle:
            pos: 60, 650
            size: 480, 1
        Rectangle:
            pos: 60, 415
            size: 480, 1
        Rectangle:
            pos: 60, 345
            size: 480, 1

    BoxLayout:
        size: 600, 850
        orientation: "vertical"


        #______  Title part  ______

        BoxLayout:
            size: 600, 100
            size_hint: None, None
            Label:
                text:"STEGOSURGERY - EMBEDDING"
                font_name: 'Myla-Black(1).ttf'
                font_size: 48
                color: 0.533, 0, 0.082, 1

        #______  Main content of page  ______

        BoxLayout:
            size: 600, 630
            size_hint: None, None
            orientation: "vertical"


            Label:
                id: label_a
                text: ""
                size: 600, 40
                size_hint: None, None
                font_size: 28
                font_name: 'Myla-Black(1).ttf'
                text_size: 570, None
                halign: 'center'
                color: 0, 0, 0, 1

            Label:
                id: label_b
                text: ""
                size: 600, 40
                size_hint: None, None
                font_size: 28
                font_name: 'Myla-Black(1).ttf'
                text_size: 570, None
                halign: 'center'
                color: 0, 0, 0, 1

            GridLayout:
                size: 600, 50
                size_hint: None, None
                cols: 2

                Label:
                    id: label_c
                    text: ""
                    size: 350, 50
                    size_hint: None, None
                    font_size: 28
                    font_name: 'Myla-Black(1).ttf'
                    halign: 'center'
                    color: 0, 0, 0, 1


                CheckBox:
                    id: check_box_a
                    size: 250, 50
                    size_hint: None, None
                    color: 0.533, 0, 0.082, 1
                    opacity: 0
                    disabled: True
                    on_active:

            BoxLayout:
                size: 600, 185
                size_hint: None, None


            Button:
                id: button_a
                size: 600, 70
                size_hint: None, None
                text:""
                font_name: 'Myla-Black(1).ttf'
                font_size: 36
                color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0
                disabled: True

                on_press:
                    self.color = 0.533, 0, 0.082, 1

                on_release:
                    self.color = 0, 0, 0, 1
                    root.on_embedding_button()
                    app.root.current = 'stitching'




            BoxLayout:
                size: 600, 245
                size_hint: None, None




        #______  Bottom part  ______

        BoxLayout:
            size: 600, 100
            size_hint: None, None


            Button:
                id: button_b
                size: 600, 100
                size_hint: None, None
                text: "Back"
                font_name: 'Myla-Black(1).ttf'
                font_size: 36
                color: 0, 0, 0, 1
                background_color: 0, 0, 0, 0

                on_press:
                    self.color = 0.533, 0, 0.082, 1

                on_release:
                    self.color = 0, 0, 0, 1
                    app.root.current = 'embedding'





